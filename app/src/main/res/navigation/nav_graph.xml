<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.moviesappdemo.views.fragments.splash.SplashFragment"
        android:label=""
        tools:layout="@layout/fragment_splash">
        <argument
            android:name="showBar"
            android:defaultValue="false" />
        <argument
            android:name="showNav"
            android:defaultValue="false" />

        <action
            android:id="@+id/navigateToMovieTrendFragment"
            app:destination="@id/movieFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.moviesappdemo.views.fragments.movietrend.MovieTrendFragment"
        android:label="Movie Clips"
        tools:layout="@layout/fragment_movie_trend">
        <argument
            android:name="showNav"
            android:defaultValue="true" />

        <argument
            android:name="showBar"
            android:defaultValue="true" />

        <action
            android:id="@+id/navigateToMovieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.moviesappdemo.views.fragments.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <argument
            android:name="showBar"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/latestMoviesFragment"
        android:name="com.example.moviesappdemo.views.fragments.movietrend.latestmovies.LatestMoviesFragment"
        android:label=""
        tools:layout="@layout/fragment_latest_movies" />
    <fragment
        android:id="@+id/trendingMoviesFragment"
        android:name="com.example.moviesappdemo.views.fragments.movietrend.trendingmovies.TrendingMoviesFragment"
        android:label="fragment_trending_movies"
        tools:layout="@layout/fragment_trending_movies" />
    <fragment
        android:id="@+id/upcomingMoviesFragment"
        android:name="com.example.moviesappdemo.views.fragments.movietrend.upcomingmovies.UpcomingMoviesFragment"
        android:label="fragment_upcoming_movies"
        tools:layout="@layout/fragment_upcoming_movies" />

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.moviesappdemo.views.fragments.moviedetail.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="showBar"
            android:defaultValue="true" />

        <argument
            android:name="movie"
            app:argType="com.example.moviesappdemo.model.Result"
            app:nullable="false" />

    </fragment>
</navigation>